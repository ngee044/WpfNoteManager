<Window x:Class="WpfNoteManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfNoteManager.ViewModels"
        Title="Note Manager" Height="400" Width="600">

    <!-- 뷰모델 연결 -->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 입력 영역 -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0 0 0 10">
            <TextBox Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,5"/>
            <TextBox Height="60" 
                     TextWrapping="Wrap" 
                     Text="{Binding NewContent, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,5"/>
            <Button Content="추가(Add)" 
                    Command="{Binding AddCommand}" 
                    Width="100" />
        </StackPanel>

        <!-- 노트 목록 -->
        <ListBox ItemsSource="{Binding Notes}"
                 SelectedItem="{Binding SelectedNote}"
                 DisplayMemberPath="Title"
                 Grid.Row="1">
        </ListBox>

        <!-- 하단 버튼 -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="삭제(Delete)" 
                    Command="{Binding DeleteCommand}" 
                    Margin="5,0,5,0"
                    Width="100" />
            <Button Content="저장(Save)" 
                    Command="{Binding SaveCommand}" 
                    Margin="5,0,5,0"
                    Width="100" />
            <Button Content="불러오기(Load)" 
                    Command="{Binding LoadCommand}" 
                    Margin="5,0,5,0"
                    Width="100" />
        </StackPanel>
    </Grid>
</Window>
